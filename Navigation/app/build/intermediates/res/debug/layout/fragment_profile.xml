<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:border_width="6dp"
        app:border_color="#d3d3d3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/load_image_Button"
        android:src="@drawable/edit_profile"
        android:onClick="click"
        android:layout_alignBottom="@+id/circle_image_view"
        android:layout_marginBottom="25dp"
        android:layout_alignRight="@+id/circle_image_view"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/name_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Company Name"
        android:id="@+id/company_name_text"
        android:layout_below="@+id/name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:visibility="invisible"
        android:hint="Name"
        android:id="@+id/name_edit"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_name_edit"
        android:ems="10"
        android:visibility="invisible"
        android:hint="Company Name"
        android:layout_alignTop="@+id/company_name_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:singleLine="true"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:background="@drawable/button_save"
        android:text="Save"
        android:id="@+id/save"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/company_name_edit"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
