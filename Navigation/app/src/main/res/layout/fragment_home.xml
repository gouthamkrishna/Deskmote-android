<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SwitchActivity">

    <ImageSwitcher
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/sw_main"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <ImageSwitcher
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/sw_right"
        android:layout_alignTop="@+id/sw_left"
        android:layout_alignParentEnd="true" />

    <ImageSwitcher
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/sw_left"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HEADER"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 : 0 : 0"
        android:id="@+id/timer_main"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/sw_main"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 : 0 : 0"
        android:id="@+id/timer_left"
        android:layout_alignBottom="@+id/sw_left"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 : 0 : 0"
        android:id="@+id/timer_right"
        android:layout_marginRight="55dp"
        android:layout_alignTop="@+id/timer_left"
        android:layout_alignEnd="@+id/sw_right" />

</RelativeLayout>
