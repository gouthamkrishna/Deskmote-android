<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/fromToSet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/titleFromTo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:background="@drawable/preference_time_text"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:text=""
        android:id="@+id/fromTextView"
        android:layout_below="@+id/titleFromTo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:background="@drawable/preference_time_text"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:text=""
        android:id="@+id/toTextView"
        android:layout_toEndOf="@+id/fromTextView"
        android:layout_alignTop="@+id/fromTextView"
        android:layout_marginStart="40dp" />

</RelativeLayout>
